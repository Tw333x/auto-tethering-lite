<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical">

    <TextView
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:gravity="bottom"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="bottom|center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/okButton"
        android:layout_alignStart="@+id/okButton" />

    <CheckBox
        android:id="@+id/chkAutoStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:maxLines="2"
        android:text="Start tethering on system startup"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/okButton"
        android:layout_height="wrap_content"
        android:text="@string/add_widget"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="false"
        android:layout_width="match_parent"
        android:layout_below="@+id/chkAutoStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp" />
</RelativeLayout>